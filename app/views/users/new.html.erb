<section class="signup">

  <header class="page-header">
  <h1>Signup</h1>
  </header>
  <div class="loginform">
    <%= form_for :user, url: '/users' do |f| %>

      <p>Name: <%= f.text_field :name %></p>
      <p>Email: <%= f.text_field :email %></p>
      <p>Password: <%= f.password_field :password %></p>
      <p>Confirm Password: <%= f.password_field :password_confirmation %></p>
      <p><%= f.submit "Submit" %></p>

    <% end %>
  </div>
</section>