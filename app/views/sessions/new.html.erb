<section class="login">

  <header class="page-header">
    <h1>Login</h1>
  </header>
  <div class="loginform">
    <%= form_tag '/login' do %>

      <p>Email: <%= text_field_tag :email %><p>
     <p> Password: <%= password_field_tag :password %><p>
      <%= submit_tag "Submit" %>

    <% end %>
  </div>
</section>